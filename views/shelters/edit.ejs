<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">Edit Shelter Information</h1>
    <div class="col-md-6 offset-md-3">
        <form action="/shelters/<%=shelter._id%>?_method=PUT" method="POST" novalidate class="validated-form"
            enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="name">Name</label>
                <input class="form-control" type="text" id="name" name="shelter[name]"
                    value="<%=shelter.name %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="shelter[location]" value="<%=shelter.location %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="shelter[description]" required> <%= shelter.description%></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="address">Address</label>
                <div class="input-group">
                    <input type="text" class="form-control" id="address" placeholder="Trout Rd, Hartford" aria-label="address" aria-describedby="address-label" name="shelter[address]" value="<%=shelter.address %>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="phone">Phone</label>
                <div class="input-group">
                    <input type="text" class="form-control" id="phone" placeholder="999-888-7777" aria-label="phone" aria-describedby="phone-label" name="shelter[phone]" value="<%=shelter.phone %>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Email</label>
                <div class="input-group">
                    <input type="email" class="form-control" id="email" placeholder="user@email.com" aria-label="email address" aria-describedby="email-label" name="shelter[email]" value="<%=shelter.email %>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <div class="form-file custom-file">
                    <input type="file" class="form-file-input" id="image" name="image" multiple>
                    <label class="form-file-label" for="image">
                        <span class="form-file-text custom-file-label">Add more image(s)...</span>
                        <span class="form-file-button">Browse</span>
                    </label>
                </div>
            </div>
            <div class="mb-3">
                <% shelter.images.forEach(function(img, i) {  %>

                <img src="<%=img.thumbnail %>" class="img-thumbnail" alt="">
                <div class="form-check-inline">
                    <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                </div>
                <label for="image-<%=i%>">Delete?</label>
                <% })%>
            </div>
            <div class="mb-3">
                <button class="btn btn-info">Update Information</button>
            </div>
        </form>
        <a href="/shelters/<%= shelter._id%>">Back</a>
    </div>
</div>