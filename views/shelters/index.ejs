<% layout('layouts/boilerplate')%>
<div id="cluster-map"></div>
<div class="container">
    <h1>All Shelters</h1>
    <a class="btn btn-success mb-2" href="/shelters/new">Register a shelter</a>
    <% for (let shelter of shelters){%>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <%if(shelter.images.length) {%>
                <img class="img-fluid" alt="" src="<%=shelter.images[0].url%>">
                <% }else {%>
                <img class="img-fluid" alt=""
                    src="https://res.cloudinary.com/mayanhavoc/image/upload/v1600103881/PetShelter/lz8jjv2gyynjil7lswf4.png">
                <% } %>
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= shelter.title %> </h5>

                    <p class="card-text"><%= shelter.description %></p>
                    <p class="card-text">
                        <small class="text-muted"><%= shelter.location%></small>
                    </p>
                    <a class="btn btn-primary" href="/pets/<%=pet._id%>">View <%=shelter.name%></a>
                </div>
            </div>
        </div>
    </div>
    <% }%>
</div>
<script>
    const mapBoxToken = '<%-process.env.MAPBOX_TOKEN%>';
    const shelter = { features: <%- JSON.stringify(shelters) %> };
</script>

<script src="/javascripts/clusterMap.js"></script>